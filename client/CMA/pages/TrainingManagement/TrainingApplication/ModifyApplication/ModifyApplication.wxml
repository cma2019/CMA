        required
        clearable
      />
      <van-field 
        name="reason"
        label="reason"
        value='{{reason}}'
        placeholder="input reason" 
        required
        clearable
      />
      <van-field 
        name="department"
        label="department"
        value='{{department}}'
        placeholder="input department" 
        required
        clearable
      />
      <view class="section">
        <picker name = 'date' mode='date' value='{{date}}' bindchange='bindDateChange'>
        <view class='picker'>
        <van-field 
        label="date"
        value='{{createDate}}'
        required
      />
      </view>
        </picker>
    </view>
    </van-cell-group>
     <van-field 
        name="situation"
        label="situation"
        value='{{situation}}'
        clearable
        readonly
      />

