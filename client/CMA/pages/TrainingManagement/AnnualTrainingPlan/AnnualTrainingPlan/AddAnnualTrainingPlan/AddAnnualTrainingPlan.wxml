<view>
  <form bindsubmit='ApplicationAdd'>
  <van-cell-group>
      <van-field 
        name="name"
        label="name"
        placeholder="input name" 
        required
        clearable
      />
      <van-field 
        name="people"
        label="people"
        placeholder="input people" 
        required
        clearable
      />
      <van-field 
        name="trainingUnit"
        label="trainingUnit"
        placeholder="input trainingUnit" 
        required
        clearable
      />
      <van-field 
        name="expense"
        label="expense"
        placeholder="input expense" 
        required
        clearable
      />
      <van-field 
        name="reason"
        label="reason"
        placeholder="input reason" 
        required
        clearable
      />
      <van-field 
        name="department"
        label="department"
        placeholder="input department" 
        required
        clearable
      />
      <view class="section">
        <picker name = 'date' mode='date' value='{{date}}' bindchange='bindDateChange'>
          <view class='picker'>
        <van-field 
        label="date"
        value='{{date}}'
        required
      />
      </view>
        </picker>
    </view>
    </van-cell-group>
    <view>
      <button class='van-button--info'formType = 'submit'>Add           </button>
    </view>
  </form>
</view>
 <van-button type="info" size="small" bindtap="goback">go back</van-button> 

