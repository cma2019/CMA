<!--pages/TrainingApplication/ModifyApplication/ModifyApplication.wxml-->
<view>
  <form bindsubmit='intercheckmodify'>
  <van-cell-group>
      <van-field 
        name="year"
        label="年份"
        value='{{year}}'
        readonly
        required
        clearable
      />
      <van-field 
        name="author"
        label="编写人"
        value='{{author}}' 
        readonly
        clearable
      />
      <van-field 
        name="createDate"
        label="编写日期"
        value='{{createDate}}' 
        readonly
        clearable
      />
      <van-field 
        name="approver"
        label="批准人"
        value='{{approver}}'
        
        required
        clearable
      />
    <view class="section">
        <picker name = 'approveDate' mode='date' value='{{approveDate}}' bindchange='bindDateChange'>
        <view class='picker'>
        <van-field 
        label="批准日期"
        value='{{approveDate}}'
        />
        </view>
        </picker>
    </view>
    </van-cell-group>
    

    <view>
      <button class='van-button--info' formType='submit'>确定</button>
    </view>
  </form>
</view>
<van-button type="info" size="small" bindtap="goback">返回</van-button> 