<view>
  <form bindsubmit='ApplicationAdd'>
  <van-cell-group>
      <van-field 
        name="year"
        label="年份"
        placeholder="年份" 
        required
        clearable
      />
      <van-field 
        name="author"
        label="编写人"
        placeholder="编写人" 
        required
        clearable
      />
     
      <view class="section">
        <picker name = 'createDate' mode='date' value='{{createDate}}' bindchange='bindDateChange1'>
          <view class='picker'>
        <van-field 
        label="编写日期"
        readonly
        value='{{createDate}}'
        required
      />
      </view>
        </picker>
    </view>
    </van-cell-group>
    <view>
      <button class='van-button--info'formType = 'submit'>确定</button>
    </view>
  </form>
</view>
 <van-button type="info" size="small" bindtap="goback">返回</van-button> 

