<view>
  <form bindsubmit='ApplicationAdd'>
  <van-cell-group>
      <van-field 
        name="year"
        label="year"
        placeholder="input year" 
        required
        clearable
      />
      <van-field 
        name="author"
        label="author"
        placeholder="input author" 
        required
        clearable
      />
     
      <view class="section">
        <picker name = 'createDate' mode='date' value='{{createDate}}' bindchange='bindDateChange1'>
          <view class='picker'>
        <van-field 
        label="createDate"
        value='{{createDate}}'
        required
      />
      </view>
        </picker>
    </view>
    </van-cell-group>
    <view>
      <button class='van-button--info'formType = 'submit'>Add           </button>
    </view>
  </form>
</view>
 <van-button type="info" size="small" bindtap="goback">go back</van-button> 

