<!--pages/TestingInstitutionManagement/TestingInstitutionInformation/TestingInstitutionInformationModify/TestingInstitutionInformationModify.wxml-->
<scroll-view scroll-y>
  <form bindsubmit='mytest'>
    <view class="section">
      <van-field name="testingInstitutionName" value="{{testingInstitutionName}}" required clearable label="检测检验机构名称" placeholder="检测检验机构名称"></van-field>
    </view>
    <view class="section">
      <van-field name="testingInstitutionAddress" value="{{testingInstitutionAddress}}" required clearable label="地址" placeholder="地址"></van-field>
    </view>
    <view class="section">
      <van-field name="postcode" value="{{postcode}}" required clearable label="邮编" placeholder="邮编"></van-field>
    </view>
    <view class="section">
      <van-field name="fax" value="{{fax}}" required clearable label="传真" placeholder="传真"></van-field>
    </view>
    <view class="section">
      <van-field name="email" value="{{email}}" required clearable label="电子邮箱" placeholder="电子邮箱"></van-field>
    </view>
    <view class="section">
      <van-field name="tiPeopleInCharge" value="{{tiPeopleInCharge}}" required clearable label="负责人" placeholder="负责人"></van-field>
    </view>
    <view class="section">
      <van-field name="tiPicPosition" value="{{tiPicPosition}}" required clearable label="负责人职务" placeholder="负责人职务"></van-field>
    </view>
    <view class="section">
      <van-field name="tiPicTelephone" value="{{tiPicTelephone}}" required clearable label="负责人固定电话" placeholder="负责人固定电话"></van-field>
    </view>
    <view class="section">
      <van-field name="tiPicMobilephone" value="{{tiPicMobilephone}}" required clearable label="负责人手机" placeholder="负责人手机"></van-field>
    </view>
    <view class="section">
      <van-field name="liaison" value="{{liaison}}" required clearable label="联络人" placeholder="联络人"></van-field>
    </view>
    <view class="section">
      <van-field name="liaisonPosition" value="{{liaisonPosition}}" required clearable label="联络人职务" placeholder="联络人职务"></van-field>
    </view>
    <view class="section">
      <van-field name="liaisonTelephone" value="{{liaisonTelephone}}" required clearable label="联络人固定电话" placeholder="联络人固定电话"></van-field>
    </view>
    <view class="section">
      <van-field name="liaisonMobilephone" value="{{liaisonMobilephone}}" required clearable label="联络人手机" placeholder="联络人手机"></van-field>
    </view>
    <view class="section">
      <van-field name="socialCreditCode" value="{{socialCreditCode}}" required clearable label="社会信用代码" placeholder="社会信用代码"></van-field>
    </view>
    <view class="section">
      <van-field name="legalEntityBelongedName" value="{{legalEntityBelongedName}}" required clearable label="所属法人单位名称" placeholder="所属法人单位名称"></van-field>
    </view>
    <view class="section">
      <van-field name="legalEntityBelongedAddress" value="{{legalEntityBelongedAddress}}" required clearable label="地址" placeholder="地址"></van-field>
    </view>
    <view class="section">
      <van-field name="lebPeopleInCharge" value="{{lebPeopleInCharge}}" required clearable label="负责人" placeholder="负责人"></van-field>
    </view>
    <view class="section">
      <van-field name="lebPicPosition" value="{{lebPicPosition}}" required clearable label="负责人职务" placeholder="负责人职务"></van-field>
    </view>
    <view class="section">
      <van-field name="lebPicTelephone" value="{{lebPicTelephone}}" required clearable label="负责人电话" placeholder="负责人电话"></van-field>
    </view>
    <view class="section">
      <van-field name="lebSocialCreditCode" value="{{lebSocialCreditCode}}" required clearable label="社会信用代码" placeholder="社会信用代码"></van-field>
    </view>
    <view class="section">
      <van-field name="competentDepartmentName" value="{{competentDepartmentName}}" required clearable label="主管部门名称" placeholder="主管部门名称"></van-field>
    </view>
    <view class="section">
      <van-field name="competentDepartmentAddress" value="{{competentDepartmentAddress}}" required clearable label="地址" placeholder="地址"></van-field>
    </view>
    <view class="section">
      <van-field name="cdPeopleInCharge" value="{{cdPeopleInCharge}}" required clearable label="负责人" placeholder="负责人"></van-field>
    </view>
    <view class="section">
      <van-field name="cdPicPosition" value="{{cdPicPosition}}" required clearable label="负责人职务" placeholder="负责人职务"></van-field>
    </view>
    <view class="section">
      <van-field name="cdPicTelephone" value="{{cdPicTelephone}}" required clearable label="负责人电话" placeholder="负责人电话"></van-field>
    </view>
    <view class="section">
      <van-cell required title="检测机构设施特点">
        <van-stepper
          value="{{characteristic}}"
          integer
          min="0"
          max="3"
          step="1"
          name="characteristic"
        />
      </van-cell>
    </view>
    <view class="section">
      <van-cell required title="法人类别">
        <van-stepper
          value="{{legalEntity}}"
          integer
          min="0"
          max="1"
          step="1"
          name="legalEntity"
        />
      </van-cell>
    </view>
    <view>
      <button class='van-button--info' form-type='submit'>确定</button>
    </view>
  </form>
  <van-button type="info" size="small" bindtap="mygo">返回</van-button>
</scroll-view>
