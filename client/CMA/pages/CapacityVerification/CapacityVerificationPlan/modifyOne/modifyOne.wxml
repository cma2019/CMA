<!--pages/IntermediateCheck/IntermediateCheck.wxml-->
<view>
  <form bindsubmit='capacityplanmodify'>
    <van-cell-group title="input message">
      <van-field 
        name="name"
        label="name"
        value='{{name}}'
        placeholder="input name" 
        required
        clearable
      />
      <van-field 
        name="organizer"
        label="organizer"
        value='{{organizer}}'
        placeholder="input organizer" 
        required
        clearable
      />
      <van-field 
        name="state"
        label="state"
        value='{{state}}'
        placeholder="input state" 
        required
        clearable
      />   
      <van-field 
        name="year"
        label="year"
        value='{{year}}'
        placeholder="input year" 
        type='number'
        required
        clearable
      />   
      <van-field 
        name="note"
        label="note"
        value='{{note}}'
        placeholder="input note" 
        required
        clearable
        border = "{{false}}"
      />    
    </van-cell-group>
    <view>
      <button class='van-button--info' formType='submit'>register</button>
    </view>
  </form>
</view>
<button class='van-button--info' bindtap="gotologin">go back</button>