<!--pages/IntermediateCheck/IntermediateCheck.wxml-->
<view>
  <form bindsubmit='capacityprojectmodify'>
    <van-cell-group title="input message">
      <van-field 
        name="name"
        label="name"
        value='{{name}}'
        placeholder="input name"
        required
        clearable
      />
      <van-field 
        name="method"
        label="method"
        value='{{method}}'
        placeholder="input method" 
        required
        clearable
      />
      <van-field 
        name="state"
        label="state"
        value='{{state}}'
        placeholder="input state" 
        required
        clearable
      />   
      <van-field 
        name="note"
        label="note"
        value='{{note}}'
        placeholder="input note" 
        required
        clearable
      />    
    </van-cell-group>
    <view>
      <button class='van-button--info' formType='submit'>register</button>
    </view>
  </form>
</view>
<button class='van-button--info' bindtap="gotologin">go back</button>