<view>
  <van-cell-group title="SelfInspection">
    <view wx:if="{{flag == 1}}">
      <view wx:for="{{mess}}" wx:for-index="id" wx:for-item="item" wx:key="unique">
        <van-cell value="详情" bindtap='gotoFile' id='{{item.id}}' is-link>
          <view slot="title">
            <view>
              <view>自查名称:{{item.name}}  </view>
              <view>自查日期:{{item.date}}  </view>
            </view>
          </view>
        </van-cell>
        <view>
          <van-button type="info" size="small"id='{{item.id}}' bindtap="SelfInspectionDelete">delete</van-button>
        </view>
      </view>
    </view>
    <view wx:else>
     <text>not have a SelfInspection yet</text>
    </view>
  </van-cell-group>
</view>
<van-button type="info" size="small" bindtap="gotoAdd">Add a SelfInspection</van-button>
<van-button type="info" size="small" bindtap="goback">back</van-button>