<view>
  <van-cell-group>
    <van-field  label="sampleNumber" value='{{info.sampleNumber}}' disabled input-align="right"/>
    <van-field  label="sampleName" value='{{info.sampleName}}' disabled input-align="right"/>
    <van-field  label="sampleAmount" value='{{info.sampleAmount}}' disabled input-align="right"/>
    <van-field  label="sampleState" value='{{info.sampleState}}' disabled input-align="right"/>
    <van-field  label="requester" value='{{info.requester}}' disabled input-align="right"/>
    <van-field  label="receiver" value='{{info.receiver}}' disabled input-align="right"/>
    <van-field  label="receiveDate" value='{{info.receiveDate}}' disabled input-align="right"/>
    <van-field  label="obtainer" value='{{info.obtainer}}' disabled input-align="right"/>
    <van-field  label="obtainDate" value='{{info.obtainDate}}' disabled input-align="right"/>
  </van-cell-group>
</view>
<view>
  <van-button type="info" size="small" bindtap="modifyData">modify</van-button>
  <van-button type="info" size="small" bindtap="deleteData">delete</van-button>
  <van-button type="info" size="small" bindtap="looktoreceipt">receiptdetail</van-button>
</view>
<view>
  <van-button type="info" size="small" bindtap="goback">back</van-button>
</view>