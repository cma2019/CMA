<!--page_samplereceive/receiveModifyOne/receiveModifyOne.wxml-->
<view>
 <form bindsubmit='SampleReceive_modifyone'>
    <van-cell-group title="SampleReceive_modifyone">
      <van-field v-model="sampleNumber" name="sampleNumber"  clearable label="样品编号" placeholder="请输入样品编号" />

      <van-field v-model="sampleName" name="sampleName" clearable label="样品名称" placeholder="请输入样品名称" />

      <van-field v-model="sampleAmount" name="sampleAmount"   clearable label="样品数量" placeholder="请输入样品数量"/>
      <van-field v-model="sampleState" name="sampleState"   clearable label="样品状态" placeholder="请输入样品状态" />

      <van-field v-model="requester"  name="requester" clearable label="委托单位" placeholder="请输入委托单位"/>

      <van-field v-model="receiver" name="receiver"  clearable label="接收人" placeholder="请输入接收人姓名" />

      <picker name = 'receiveDate' mode='date' value='{{receiveDate}}' bindchange='bindreceiveDateChange'>
        <view class='picker'>
          <van-field  name="receiveDate" label="接收日期" value='{{receiveDate}}' placeholder="请输入接收日期"  clearable />
        </view>
      </picker>  

      <van-field v-model="obtainer" name="obtainer"  clearable label="领取人" placeholder="请输入领取人姓名" />

      
      <picker name = 'obtainDate' mode='date' value='{{obtainDate}}' bindchange='bindobtainDateChange'>
        <view class='picker'>
          <van-field  name="obtainDate" label="领取日期" value='{{obtainDate}}' placeholder="请输入领取日期" clearable />
        </view>
      </picker>

    </van-cell-group>
    <view>
      <button formType='submit'>完成</button>
    </view>
  </form>
</view>
<button bindtap="goback">取消</button>