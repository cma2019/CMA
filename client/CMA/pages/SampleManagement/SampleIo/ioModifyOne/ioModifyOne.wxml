<!--page_SampleIo/ioModifyOne/ioModifyOne.wxml-->
<view>
 <form bindsubmit='SampleIo_modifyone'>
    <van-cell-group title="SampleIo_modifyone">
      <van-field v-model="sampleNumber" name="sampleNumber" clearable label="样品编号" placeholder="{{sampleNumberinfo}}" />

      <van-field v-model="sampleName" name="sampleName" clearable label="样品名称" placeholder="{{sampleNameinfo}}" />

      <van-field v-model="sampleAmount" name="sampleAmount" clearable label="样品数量" placeholder="{{sampleAmountinfo}}"/>
      <van-field v-model="sampleState" name="sampleState"clearable label="样品状态" placeholder="{{sampleStateinfo}}" />

      <van-field v-model="sender"  name="sender" clearable label="送样人" placeholder="{{senderinfo}}"/>

      <van-field v-model="receiver" name="receiver" clearable label="接收人" placeholder="{{receiverinfo}}" />

      <picker name = 'sendDate' mode='date' value='{{sendDate}}' bindchange='bindsendDateChange'>
        <view class='picker'>
          <van-field  name="sendDate" label="送样日期"  value='{{sendDate}}' placeholder="{{sendDateinfo}}" clearable />
        </view>
      </picker>  

      <van-field v-model="obtainer" name="obtainer" clearable label="领取人" placeholder="{{obtainerinfo}}" />

      
      <picker name = 'obtainDate' mode='date' value='{{obtainDate}}' bindchange='bindobtainDateChange'>
        <view class='picker'>
          <van-field  name="obtainDate" label="领取日期" value='{{obtainDate}}' placeholder="{{obtainDateinfo}}" clearable />
        </view>
      </picker>

      <van-field v-model="note"  name="note" clearable label="备注" placeholder="{{noteinfo}}" rows="1" autosize />
    </van-cell-group>
    <view>
      <button formType='submit'>完成</button>
    </view>
  </form>
</view>
<button bindtap="goback">取消</button>