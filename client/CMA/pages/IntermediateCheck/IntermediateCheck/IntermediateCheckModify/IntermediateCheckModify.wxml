<!--pages/IntermediateCheck/IntermediateCheck.wxml-->
<view>
  <form bindsubmit='intercheckmodify'>
    <van-cell-group title="input message">
      <van-field 
        name="object"
        label="object"
        value='{{object}}'
        placeholder="input object" 
        required
        clearable
      />
      <van-field 
        name="content"
        label="content"
        value='{{content}}'
        placeholder="input content" 
        required
        clearable
      />
        <picker name = 'date' mode='date' value='{{checkDate}}' bindchange='bindDateChange'>
          <view class='picker'>
            <van-field 
              name="date"
              label="date"
              value='{{checkDate}}'
              placeholder="input date" 
              required
              clearable
            />
          </view>
        </picker>      
      <van-field
        name="personInCharge"
        label="personInCharge"
        placeholder="input personInCharge"
        value='{{personInCharge}}'
        required
        clearable
        border = "{{false}}"
      />
      <van-field
        name="state"
        label="state"
        placeholder="input state"
        value='{{state}}'
        required
        clearable
        border = "{{false}}"
      />
    </van-cell-group>
    <view>
      <button class='van-button--info' formType='submit'>register</button>
    </view>
  </form>
</view>
<button class='van-button--info' bindtap="gotologin">go back</button>