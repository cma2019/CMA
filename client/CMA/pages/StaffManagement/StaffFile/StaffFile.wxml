<!--pages/StaffManagement/StaffManagement.wxml-->
<view>
  <van-cell-group title="StaffFile">
  <view wx:for="{{mess}}" wx:for-index="id" wx:for-item="item" wx:key="unique">
  <van-cell value="详情" bindtap='gotoOne' id='{{item.staffId}}' is-link>
      <view slot="title">
        <view>staffId : {{item.staffId}}</view>
        <view>name : {{item.name}}</view>
        <view>department : {{item.department}}</view>
        <view>position : {{item.position}}</view>
      </view>
  </van-cell>
</view>
  </van-cell-group>
</view>
    <van-button type="info" size="small" bindtap="gotoAdd">Add</van-button>
