<!--pages/TrainingApplication/ModifyApplication/ModifyApplication.wxml-->
<view>
  <form bindsubmit='intercheckmodify'>
  <van-cell-group>
      <van-field 
        name="trainingId"
        label="培训编号"
        value='{{trainingId}}'
        readonly
        required
        clearable
      />
      <van-field 
        name="id"
        label="人员编号"
        value='{{id}}'
        readonly
       required
        clearable
      />
      <van-field 
        name="result"
        label="培训结果"
        value='{{result}}'
        placeholder="合格或未合格" 
        required
        clearable
      />
    </van-cell-group>
    <view>
      <button class='van-button--info' formType='submit'>确定</button>
    </view>
  </form>
</view>
<van-button type="info" size="small" bindtap="goback">返回</van-button> 

