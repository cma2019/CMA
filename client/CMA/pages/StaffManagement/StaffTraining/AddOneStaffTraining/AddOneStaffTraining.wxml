<!--pages/StaffManagement/AddStaff/AddStaff.wxml-->
<view>
  <form bindsubmit='StaffAdd'>
   <van-cell-group>
      <van-field 
        name="trainingId"
        label="培训编号"
        placeholder="培训编号" 
        required
        type="number"
        clearable
      />
      <van-field 
        name="program"
        label="培训项目名称"
        placeholder="培训项目名称" 
        required
        clearable
      />
      <view class="section">
        <picker name = 'trainingDate' mode='date' value='{{trainingDate}}' bindchange='bindDateChange'>
          <view class='picker'>
        <van-field 
        label="培训日期"
        readonly
        value='{{trainingDate}}'
        required
      />
      </view>
        </picker>
    </view>
      <van-field 
        name="place"
        label="培训地点"
        placeholder="培训地点" 
        required
        clearable
      />
      <van-field 
        name="presenter"
        label="主讲人"
        placeholder="主讲人" 
        required
        clearable
      />
      <van-field 
        name="content"
        label="培训内容"
        placeholder="培训内容" 
        required
        clearable
      />
      <van-field 
        name="note"
        label="备注"
        placeholder="备注" 
        required
        clearable
      />
    </van-cell-group>
    <view>
      <button class='van-button--info'  formType='submit'>确定</button>
    </view>
  </form>
</view>
