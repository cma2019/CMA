<!--pages/StaffManagement/AddStaff/AddStaff.wxml-->
<view>
  <form bindsubmit='StaffAdd'>
   <van-cell-group>
      <van-field 
        name="name"
        label="姓名"
        placeholder="姓名" 
        
        required
        clearable
      />
 
      <van-field 
        name="gender"
        label="性别"
        placeholder="男或女"" 
        required
        clearable
        
      />
      <van-field 
        name="department"
        label="部门"
        placeholder="部门" 
        required
        clearable
      />
      <van-field 
        name="position"
        label="职位"
        placeholder="职位" 
        required
        clearable
      />
      <van-field 
        name="title"
        label="职称"
        placeholder="职称" 
        required
        clearable
      />
      <van-field 
        name="degree"
        label="文化程度"
        placeholder="文化程度" 
        required
        clearable
      />
      <van-field 
        name="graduationSchool"
        label="毕业院校"
        placeholder="毕业院校" 
        required
        clearable
      />
      <van-field 
        name="graduationMajor"
        label="毕业专业"
        placeholder="毕业专业" 
        required
        clearable
      />
      <view class="section">
        <picker name = 'date' mode='date' value='{{date}}' bindchange='bindDateChange'>
          <view class='picker'>
        <van-field 
        label="毕业时间"
        value='{{date}}'
        readonly
        required
      />
      </view>
        </picker>
    </view>
      <van-field 
        name="workingYears"
        label="工龄"
        placeholder="工龄" 
        type="number"
        required
        clearable
        
      />      
    </van-cell-group>
    <view>
      <button class='van-button--info'  formType='submit'>确定</button>
    </view>
  </form>
</view>

 <van-button type="info" size="small" bindtap="goback">返回</van-button>