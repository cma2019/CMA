<view>
  <van-cell-group title="SupervisionRecord">
    <view wx:if="{{flag == 1}}">
      <view wx:for="{{mess}}" wx:for-index="id" wx:for-item="item" wx:key="unique">
        <van-cell value="详情" bindtap='gotodetail' id='{{item.recordId}}' is-link>
          <view slot="title">
            <view>recordId:{{item.recordId}}  </view>
            <view>planId:{{item.planId}}  </view>
            <view>department:{{item.department}}</view>
          </view>
        </van-cell>
        <view>
          <van-button type="info" size="small"id='{{item.recordId}}' bindtap="supervisionRecordModify">modify</van-button>
          <van-button type="info" size="small"id='{{item.recordId}}' bindtap="supervisionRecordDelete">delete</van-button>
        </view>
      </view>
    </view>
    <view wx:else>
     <text>not have a supervisionRecord yet</text>
    </view>
  </van-cell-group>
</view>
<view>
  <van-button type="info" size="small" bindtap="supervisionRecordAdd">Add a SupervisionRecord</van-button>
  <van-button type="info" size="small" bindtap="goback">back</van-button>
</view>