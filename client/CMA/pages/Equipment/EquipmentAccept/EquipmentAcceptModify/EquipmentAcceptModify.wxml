<scroll-view scroll-y>
  <form bindsubmit='mytest'>
    <view class="section">
      <van-field name="name" value="{{equipment.name}}" required clearable label="name" placeholder="input name"></van-field>
    </view>
    <view class="section">
      <van-field name="model" value="{{equipment.model}}" required clearable label="model" placeholder="input model"></van-field>
    </view>
    <view class="section">
      <van-field name="manufacturer" value="{{equipment.manufacturer}}" required clearable label="manufacturer" placeholder="input manufacturer"></van-field>
    </view>
    <view class="section">
      <van-field name="receiveSituation" value="{{equipment.receiveSituation}}" required clearable label="receiveSituation" placeholder="input receiveSituation"></van-field>
    </view>
    <view class="section">
      <van-field name="recipient" value="{{equipment.recipient}}" required clearable label="recipient" placeholder="input recipient"></van-field>
    </view>
    <view class="section">
      <van-field name="receiveDate" value="{{equipment.receiveDate}}" required clearable label="receiveDate" placeholder="input receiveDate"></van-field>
    </view>
    <view class="section">
      <van-field name="equipmentSituation" value="{{equipment.equipmentSituation}}" required clearable label="equipmentSituation" placeholder="input equipmentSituation"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptance" value="{{equipment.acceptance}}" required clearable label="acceptance" placeholder="input acceptance"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptancePerson" value="{{equipment.acceptancePerson}}" required clearable label="acceptancePerson" placeholder="input acceptancePerson"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptanceDate" value="{{equipment.acceptanceDate}}" required clearable label="acceptanceDate" placeholder="input acceptanceDate"></van-field>
    </view>
    <view>
      <button class='van-button--info' form-type='submit'>Modify</button>
    </view>
  </form>
</scroll-view>