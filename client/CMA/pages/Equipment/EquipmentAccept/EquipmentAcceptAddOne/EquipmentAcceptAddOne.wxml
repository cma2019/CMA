<scroll-view scroll-y>
  <form bindsubmit='newEquipment'>
    <view class="section">
      <van-field name="name" value="{{name}}" required clearable label="name" placeholder="input name"></van-field>
    </view>
    <view class="section">
      <van-field name="model" value="{{model}}" required clearable label="model" placeholder="input model"></van-field>
    </view>
    <view class="section">
      <van-field name="manufacturer" value="{{manufacturer}}" required clearable label="manufacturer" placeholder="input manufacturer"></van-field>
    </view>
    <view class="section">
      <van-field name="receiveSituation" value="{{receiveSituation}}" required clearable label="receiveSituation" placeholder="input receiveSituation"></van-field>
    </view>
    <view class="section">
      <van-field name="recipient" value="{{recipient}}" required clearable label="recipient" placeholder="input recipient"></van-field>
    </view>
    <view class="section">
      <picker name = 'receiveDate' mode='date' value='{{receiveDate}}' bindchange='bindDateChange'>
          <view class='picker'>
            <van-field 
              name="receiveDate"
              label="receiveDate"
              value='{{receiveDate}}'
              placeholder="input receiveDate" 
              required
              clearable
            />
          </view>
      </picker> 
    </view>
    <view class="section">
      <van-field name="equipmentSituation" value="{{equipmentSituation}}" required clearable label="equipmentSituation" placeholder="input equipmentSituation"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptance" value="{{acceptance}}" required clearable label="acceptance" placeholder="input acceptance"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptancePerson" value="{{acceptancePerson}}" required clearable label="acceptancePerson" placeholder="input acceptancePerson"></van-field>
    </view>
    <view class="section">
      <van-field name="acceptanceDate" value="{{acceptanceDate}}" required clearable label="acceptanceDate" placeholder="input acceptanceDate"></van-field>
    </view>
    <view>
      <button class='van-button--info' formType='submit'>new equipment accept</button>
    </view>
  </form>
</scroll-view>